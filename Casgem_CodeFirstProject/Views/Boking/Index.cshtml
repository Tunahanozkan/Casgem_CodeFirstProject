@model List<Casgem_CodeFirstProject.DAL.Entities.Booking>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Geziler</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Mail</th>
        <th>Ülke</th>
        <th>Gün Sayısı</th>
        <th>Tarih</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BookingID</td>
            <td>@item.CustomerName</td>
            <td>@item.Mail</td>
            <td>@item.Destination</td>
            <td>@item.Duration</td>
            <td>@item.BokingDate</td>
            <td><a class="btn btn-danger" href="/Booking/DeleteBooking/@item.BookingID">Sil</a></td>
        </tr>
    }

</table>


